<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="lab.zhang.hermes.dao.IndicatorDao">

    <resultMap id="BaseResultMap" type="lab.zhang.hermes.entity.indicator.IndicatorEntity" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="expression" property="expression" jdbcType="LONGVARCHAR" />
    </resultMap>

    <sql id="BaseColumnList" >
        id, name, expression
    </sql>

    <select id="findAll" resultMap="BaseResultMap"  >
        SELECT
            <include refid="BaseColumnList" />
        FROM indicator
    </select>

    <select id="findOne" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT
            <include refid="BaseColumnList" />
        FROM indicator
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="lab.zhang.hermes.entity.indicator.IndicatorEntity" useGeneratedKeys="true" >
        INSERT INTO
            indicator (name,expression)
        VALUES
            (#{name}, #{expression})
    </insert>

    <update id="update" parameterType="lab.zhang.hermes.entity.indicator.IndicatorEntity" >
        UPDATE
            indicator
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="expression != null">expression = #{expression},</if>
        </trim>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long" >
        DELETE FROM
            indicator
        WHERE
            id =#{id}
    </delete>

</mapper>
